<div class="col-md-12">
<p id="notice"><%= notice %></p>

<h1>蔵書一覧</h1>

<table class="table table-striped table-responsive  ">
  <thead>
    <tr>
      <th>タイトル</th>
      <th>表紙</th>
      <th>著者</th>
      <th>価格</th>
      <th>出版社</th>
      <th>出版日</th>
      <th>ISBN</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.book_name %></td>
        <td><image src ="<%= book.book_image %>" class="img-responsive img-user"></td>
        <td><%= book.author %></td>
        <td><%= book.price %></td>
        <td><%= book.publisher %></td>
        <td><%= book.published_date %></td>
        <td><%= book.isbn %></td>
        <td><%= link_to '表示', book, class:"btn btn-default btn-xs"%></td>
        <td><%= link_to '編集', edit_book_path(book), class:"btn btn-default btn-xs" %></td>
        <td><%= link_to '', book, method: :delete, data: { confirm: '本当に削除して良いですか?' }, class:"btn btn-default btn-xs" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '本の追加', new_book_path, class:"btn btn-default btn-sm" %>
</div>
